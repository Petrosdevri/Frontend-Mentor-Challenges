@import url('https://fonts.googleapis.com/css?family=DM+Sans:400,700&display=swap')

html body
    background: hsl(27, 66%, 92%)
    color: hsl(186, 34%, 60%)
    font-family: 'DM Sans', sans-serif
    font-size: 18px
    width: 100%
    height: 100%

    .container
        margin: 4em 0
        >*
            border-radius: 15px
            margin-block-start: 3em
            width: 625px


        .balance
            height: 125px
            background: hsl(10, 79%, 65%)
            color: hsl(100, 100%, 100%)
            padding: 3em

        .expenses
            background: hsl(33, 100%, 98%)
            color: hsl(25, 47%, 15%)
            margin-block-start: 1em

            >*
                padding: 1.2em

            hr
                margin-left: 5%
                width: 90%

            .chart .bar-date
                .bar
                    display: inline-block
                    background: hsl(10, 79%, 65%)
                    border-radius: 5px
                    width: 50px
                    &:hover
                        background: hsl(10, 79%, 85%)

                .current
                    background: hsl(186, 34%, 60%)
                    &:hover
                        background: hsl(186, 34%, 80%)

                .date
                    color: hsl(28, 10%, 53%)

            .total-month-balances
                margin: 0 1em
                .total-balance .total-month .total
                    color: hsl(25, 47%, 15%)
                    font-size: 2em

                .month-percentage strong
                    margin-inline-start: 4.25em

            .total-month, .month
                color: hsl(28, 10%, 53%)

        @media (max-width: 700px)
            >*
                width: 375px
                height: 100%

            .balance
                padding: 1.25em

            .expenses .total-month-balances
                margin: 0 0.15em