@import url("https://fonts.googleapis.com/css?family=Kumbh+Sans:400,700")
@import url("https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")

html body
    background: linear-gradient(180deg, hsl(273, 75%, 66%) 0%, hsl(240, 73%, 65%) 100%)
    background-position: center
    background-size: cover
    color: hsl(240, 6%, 50%)
    font-family: "Kumbh Sans", sans-serif
    font-size: 12px

    .container
        .faq-card
            width: 85%
            height: 600px
            background: hsl(0, 0%, 100%)
            border-radius: 20px
            box-shadow: 0 0 10px 0 hsla(0, 0%, 0%, 0.2)
            margin-block-start: 18em
            margin-block-end: 32em

            @media (max-width: 900px)
                flex-direction: column
                justify-content: start
                width: 330px
                height: 1200px

            .card-image
                .illustration
                    transform: translate(-29.5%, 20%)
                    .img-box
                        position: absolute
                        transform: translate(2%, 90%)
                        z-index: 2
                    .illustration-woman
                        position: relative
                        transform: skewY(-6.5deg)
                        z-index: 1

                @media (max-width: 900px)
                    transform: translate(25%, -65%)
                    .img-box
                        width: 25px
                        height: 25px
                    .illustration-woman
                        width: 250px
                        position: relative
                        transform: skewX(-6.5deg)

            .faq
                margin: 3em;

                .title
                    color: hsl(238, 29%, 16%)
                    font-weight: 700
                    margin-inline-start: 0.8em

                .accordion
                    list-style: none
                    width: 500px

                    @media (max-width: 900px)
                        width: 90%

                    .acc-item
                        margin-bottom: 1rem
                        .acc-header
                            border-bottom: 2px solid hsl(240, 5%, 91%)
                            color: hsl(240, 6%, 50%)
                            padding: 1rem;
                            font-size: 1.2rem;

                            .arrow
                                float: right

                            &:hover
                                cursor: pointer;

                        .acc-content
                            display: none
                            font-size: 1em